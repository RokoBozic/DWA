@model WebApp.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<!-- Product Delete View: Displays a confirmation page for deleting a product, showing product details and a delete button. -->

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h2 class="mb-0">Delete Product</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        Are you sure you want to delete this product?
                    </div>
                    <div class="mb-4">
                        <h4 class="text-white">@Model.Name</h4>
                        <p class="text-muted">@Model.Description</p>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                        }
                        <div class="mt-3">
                            <span class="badge bg-info">
                                <i class="fas fa-globe"></i> Country: @Model.Country?.Name
                            </span>
                            <span class="badge bg-success ms-2">
                                <i class="fas fa-tag"></i> Price: $@Model.Price.ToString("F2")
                            </span>
                        </div>
                    </div>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a href="/Product" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
