<!-- Account Register View: Displays a registration form for new users to create an account. -->
@model WebApp.Models.User
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form asp-action="Register" method="post">
    <div>
        <label>Username:</label>
        <input asp-for="Username" required />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="PasswordHash" type="password" required />
    </div>
    <button type="submit">Register</button>
</form>
