@model WebApp.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<!-- Shop Details View: Displays detailed information for a specific product, including image, description, price, country, and an order button. -->

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h2 class="mb-0">@Model.Name</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-4 mb-3">
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
                            </div>
                        }
                        <div class="col">
                            <p class="lead">@Model.Description</p>
                            <div class="mb-3">
                                <h4 class="text-success">Price: $@Model.Price.ToString("F2")</h4>
                            </div>
                            <div class="mb-4">
                                <span class="badge bg-info">
                                    <i class="fas fa-globe"></i> Available in: @Model.Country?.Name
                                </span>
                            </div>
                            <form asp-action="Order" method="post" class="mb-3">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-shopping-cart"></i> Order Now
                                </button>
                            </form>
                            <a href="/Shop" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Shop
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
