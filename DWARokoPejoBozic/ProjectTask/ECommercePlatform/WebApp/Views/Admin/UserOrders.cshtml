<!-- Admin UserOrders View: Displays a list of users and their orders, including product, country, price, and order date. -->
@model List<WebApp.Models.User>
@{
    ViewData["Title"] = "User Orders";
}

<div class="container mt-4">
    <h2 class="text-white mb-4">User Orders</h2>

    @foreach (var user in Model)
    {
        <div class="card bg-dark text-white mb-4">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user"></i> @user.Username
                    <small class="text-muted">(@user.Email)</small>
                </h4>
            </div>
            <div class="card-body">
                @if (user.Orders != null && user.Orders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Country</th>
                                    <th>Price</th>
                                    <th>Order Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in user.Orders)
                                {
                                    <tr>
                                        <td>@order.Product?.Name</td>
                                        <td>@order.Country?.Name</td>
                                        <td>$@order.Product?.Price.ToString("F2")</td>
                                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No orders for this user.
                    </div>
                }
            </div>
        </div>
    }
</div>
